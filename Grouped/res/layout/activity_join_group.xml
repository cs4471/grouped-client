<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/steel_grey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".JoinGroup" >

    <TextView
        android:id="@+id/enter_group_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Group ID: "
        android:textColor="@color/plum_purple" />

    <EditText
        android:id="@+id/enter_group_id_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/enter_group_id_text"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/enter_group_key_text"
        android:ems="10" />


    <TextView
        android:id="@+id/enter_group_key_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enter_group_id_text"
        android:layout_below="@+id/enter_group_id_field"
        android:text="Enter Group Key: "
        android:textColor="@color/plum_purple" />

    <EditText
        android:id="@+id/enter_group_key_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enter_group_id_field"
        android:layout_alignTop="@+id/enter_group_key_text"
        android:ems="10" />

    <Button
        android:id="@+id/join_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_group_key_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@color/plum_purple"
        android:textColor="@color/steel_grey"
        android:text="Join Group"
        android:onClick="joinGroup"/>

</RelativeLayout>