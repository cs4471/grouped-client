<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/steel_grey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateGroup" >

   <ImageView
       	android:id="@+id/CreateGroupCircle"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/create_group_circle" />
   
      <ImageView
       	android:id="@+id/TopBottomAlign"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
   
      
     <ImageView
       	android:id="@+id/CornersAlign"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
     
     <ImageView
         android:id="@+id/create_button"
         android:layout_width="100dp"
         android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/create_group_circle"
        android:onClick="launchConfirmationPage"/>
   
   <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TopBottomAlign"
        android:layout_centerHorizontal="true"
        android:src="@drawable/attr_buttons_create_group_page" />
   
    <ImageView
        android:id="@+id/NameButtonCheck"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_above="@+id/TopBottomAlign"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/checkmark"
        android:visibility="invisible" />
     
     
    <Button
        android:id="@+id/NameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TopBottomAlign"
        android:layout_centerHorizontal="true"
        android:background="@drawable/attr_buttons_create_group_page"
        android:onClick="onClick"
        android:text="Name" />
    
    <ImageView
        android:id="@+id/EventButtonCheck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/CornersAlign"
        android:layout_alignRight="@+id/CornersAlign"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/checkmark"
        android:visibility="invisible" />
    
    <Button
        android:id="@+id/EventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CornersAlign"
        android:layout_alignRight="@+id/CornersAlign"
        android:background="@drawable/attr_buttons_create_group_page"
        android:text="Event"
        android:onClick="onClick"  />

    <ImageView
        android:id="@+id/TimeButtonCheck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/CornersAlign"
        android:layout_alignLeft="@+id/CornersAlign"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/checkmark"
        android:visibility="invisible" /> 
    
    <Button
        android:id="@+id/TimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CornersAlign"
        android:layout_alignLeft="@+id/CornersAlign"
        android:background="@drawable/attr_buttons_create_group_page"
        android:onClick="onClick"
        android:text="Time"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TopBottomAlign"
        android:layout_centerHorizontal="true"
        android:src="@drawable/attr_buttons_create_group_page" />
    
    <ImageView
        android:id="@+id/FenceButtonCheck"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TopBottomAlign"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/checkmark"
        android:visibility="invisible" /> 
    
    <Button
        android:id="@+id/FenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TopBottomAlign"
        android:background="@drawable/attr_buttons_create_group_page"
        android:onClick="onClick"
        android:text="Fence" />
    
    <ImageView
        android:id="@+id/SumtinButtonCheck"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:layout_below="@+id/CornersAlign"
        android:layout_alignRight="@+id/CornersAlign"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/checkmark"
        android:visibility="invisible" /> 
    
    <Button
        android:id="@+id/SumtinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CornersAlign"
        android:layout_alignRight="@+id/CornersAlign"
        android:background="@drawable/attr_buttons_create_group_page"
        android:onClick="onClick"
        android:text="Sumtin" />

    <ImageView
        android:id="@+id/ElseButtonCheck"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:layout_below="@+id/CornersAlign"
        android:layout_alignLeft="@+id/CornersAlign"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/checkmark"
        android:visibility="invisible" /> 
        
    <Button
        android:id="@+id/ElseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CornersAlign"
        android:layout_alignLeft="@+id/CornersAlign"
        android:background="@drawable/attr_buttons_create_group_page"
        android:onClick="onClick"
        android:text="Else" />


</RelativeLayout>
